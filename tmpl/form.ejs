<%_ fields.forEach(function(field) {_%>
    <%_ if(field.type == 'input') {_%>
<div class="form-group">
    <label class="col-md-4 control-label" for="<%=field.name%>"><%=field.label%></label>
    <div class="col-md-8">
        <input id="<%=field.name%>"
        ng-model="<%=model%>.<%=field.name%>"
        name="<%=field.name%>" type="text" placeholder="" class="form-control input-sm" required="<%=field.required%>">
    </div>
</div>
    <%_}_%>
    <%_ if(field.type == 'number') {_%>
<div class="form-group">
    <label class="col-md-4 control-label" for="<%=field.name%>"><%=field.label%></label>
    <div class="col-md-8">
        <input id="<%=field.name%>"
        ng-model="<%=model%>.<%=field.name%>"
        name="<%=field.name%>" type="number" placeholder="" class="form-control input-sm" required="<%=field.required%>">
    </div>
</div>
    <%_}_%>
    <%_ if(field.type == 'datetime-local') {_%>
<div class="form-group">
    <label class="col-md-4 control-label" for="<%=field.name%>"><%=field.label%></label>
    <div class="col-md-8">
        <input
        ng-model="<%=model%>.<%=field.name%>"
        id="<%=field.name%>" name="<%=field.name%>" type="datetime-local" placeholder="" class="form-control input-sm" required="">
    </div>
</div>
    <%_}_%>
    <%_ if(field.type == 'area') {_%>
<div class="form-group">
    <label class="col-md-4 control-label" for="<%=field.name%>"><%=field.label%></label>
    <div class="col-md-8">
        <textarea
        ng-model="<%=model%>.<%=field.name%>"
        required=""
        class="form-control" id="<%=field.name%>" name="<%=field.name%>"></textarea>
    </div>
</div>
    <%_}_%>
    <%_ if(field.type == 'select') {_%>
<div class="form-group">
    <label class="col-md-4 control-label" for="<%=field.name%>"><%=field.label%></label>
    <div class="col-md-8">
        <select
        ng-model="<%=model%>.<%=field.name%>"
         id="<%=field.name%>" name="<%=field.name%>" class="form-control">
            <%_ field.options.forEach(function(option) {_%>
            <option value="<%=option.value%>"><%=option.text%></option>
            <%_ }); _%>
        </select>
    </div>
</div>
    <%_}_%>
 <%_ }); _%>